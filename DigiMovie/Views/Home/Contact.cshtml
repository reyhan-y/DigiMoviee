@{
    ViewData["Title"] = "تماس با ما";
}
@section Head{
    <meta name="description" content="وب سایت دیجی مووی برترین وب سایت در زمینه فیلم و سریال - @ViewData["Title"]" />
}

<div class="row">
    <div class="md">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>


<form asp-action="ContactProcess" method="get">
    <div class="form-group row">
        <div class="col-md-6 text-right">
            <label for="name" class="col-form-label">نام : </label>
            <input type="text" required class="form-control" id="name" name="name" placeholder="نام خود را وارد نمایید">
        </div>
        <div class="col-md-6 text-right">
            <label for="email" class="col-form-label">پست الکترونیکی : </label>
            <input type="email" required class="form-control" id="email" name="email" placeholder="ایمیل خود را وارد نمایید">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6 text-right">
            <label for="subject" class="col-form-label">موضوع : </label>
            <input type="text" required class="form-control" id="subject" name="subject" placeholder="موضوع پیام را وارد نمایید">
        </div>
        <div class="col-md-6 text-right">
            <label for="body" class="col-form-label">بدنه : </label>
            <textarea class="form-control" required id="body" name="body" rows="5" placeholder="متن پیام خود را وارد نمایید"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md text-right">
            <button type="submit" class="btn btn-success">ارسال
                <i class="fa fa-paper-plane" aria-hidden="true"></i>
            </button>
        </div>
    </div>
    </form>